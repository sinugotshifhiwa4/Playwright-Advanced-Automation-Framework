{
  "name": "playwright-advanced-automation-framework",
  "version": "1.0.0",
  "description": "A framework for validating Company website across UI, API, DB and workflows to ensure seamless integration and quality",
  "keywords": [
    "playwright",
    "typescript",
    "dotenv",
    "cross-env",
    "axios",
    "mssql",
    "@azure/identity",
    "cryptography",
    "argon2",
    "hashing",
    "winston",
    "logging",
    "reporting",
    "ortoni-report",
    "error-handling",
    "eslint",
    "prettier"
  ],
  "license": "ISC",
  "author": "Tshifhiwa Sinugo",
  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "lint": "tsc --noEmit && eslint src/**/*.ts tests/**/*.ts",
    "pretest:all:dev": "npm run lint",
    "pretest:all:uat": "npm run lint",
    "pretest:auth:dev": "npm run lint",
    "pretest:auth:uat": "npm run lint",
    "pretest:ui:dev": "npm run lint",
    "pretest:ui:uat": "npm run lint",
    "pretest:api:dev": "npm run lint",
    "pretest:api:uat": "npm run lint",
    "pretest:encryption:dev": "npm run lint",
    "pretest:encryption:uat": "npm run lint",
    "test:encryption:dev": "cross-env ENV=dev SKIP_BROWSER_INIT=true npx playwright test tests/encryption",
    "test:encryption:uat": "cross-env ENV=uat SKIP_BROWSER_INIT=true npx playwright test tests/encryption",
    "test:auth:dev": "cross-env ENV=dev npx playwright test authSession.setup.ts",
    "test:auth:uat": "cross-env ENV=uat npx playwright test authSession.setup.ts",
    "test:ui:dev": "cross-env ENV=dev npx playwright test tests/ui",
    "test:ui:uat": "cross-env ENV=uat npx playwright test tests/ui",
    "test:api:dev": "cross-env ENV=dev npx playwright test tests/api",
    "test:api:uat": "cross-env ENV=uat npx playwright test tests/api",
    "test:all:dev": "cross-env ENV=dev npx playwright test",
    "test:all:uat": "cross-env ENV=uat npx playwright test",
    "test:failed:dev": "cross-env ENV=dev npx playwright test --last-failed",
    "test:failed:uat": "cross-env ENV=uat npx playwright test --last-failed",
    "test:changed:dev": "cross-env ENV=dev npx playwright test --only-changed",
    "test:changed:uat": "cross-env ENV=uat npx playwright test --only-changed",
    "test:changed:main:dev": "cross-env ENV=dev npx playwright test --only-changed=main",
    "test:changed:main:uat": "cross-env ENV=uat npx playwright test --only-changed=main",
    "test:repeat:dev": "cross-env ENV=dev npx playwright test --repeat-each=3",
    "test:repeat:uat": "cross-env ENV=uat npx playwright test --repeat-each=3",
    "ui": "npx playwright test --ui",
    "record": "npx playwright codegen",
    "report": "npx playwright show-report",
    "allure:generate": "npx allure generate ./allure-results --clean -o ./allure-report",
    "allure:open": "npx allure open ./allure-report",
    "allure": "npm run allure:generate && npm run allure:open",
    "format": "prettier --write ."
  },
  "dependencies": {
    "argon2": "^0.43.0",
    "async-mutex": "^0.5.0",
    "axios": "^1.9.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.5.0",
    "lru-cache": "^11.1.0",
    "moment-timezone": "^0.5.48",
    "playwright": "^1.52.0",
    "playwright-trx-reporter": "^1.0.10",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.52.0",
    "@types/node": "^22.15.17",
    "allure-playwright": "^3.2.2",
    "cspell": "^9.0.1",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "ortoni-report": "^3.0.2",
    "prettier": "3.5.3"
  }
}
